<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>ch.srueegger.bootmate</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0-only</project_license>
  <name>Boot Mate</name>
  <summary>Manage autostart entries</summary>
  <description>
    <p>
      Boot Mate provides a simple and intuitive interface to manage your
      system's autostart entries. You can view all autostart applications,
      edit their properties, add startup parameters, or remove them entirely.
    </p>
    <p>
      Perfect for managing which applications start automatically when you
      log in to your GNOME session.
    </p>
  </description>
  <launchable type="desktop-id">ch.srueegger.bootmate.desktop</launchable>
  <provides>
    <binary>bootmate</binary>
  </provides>
  <url type="homepage">https://github.com/srueegger/bootmate</url>
  <url type="bugtracker">https://github.com/srueegger/bootmate/issues</url>
  <developer_name>Samuel RÃ¼egger</developer_name>
  <content_rating type="oars-1.1" />
  <releases>
    <release version="1.2.0" date="2025-12-13">
      <description>
        <p>New features and improvements</p>
        <ul>
          <li>Add enable/disable toggle switches for quick control of autostart entries</li>
          <li>Visual feedback: disabled entries appear dimmed for better clarity</li>
          <li>Larger application icons for improved visibility</li>
          <li>Fix markup parsing warnings for entry names with special characters</li>
          <li>Professional README without emojis</li>
        </ul>
      </description>
    </release>
    <release version="1.1.0" date="2025-11-30">
      <description>
        <p>Improved compatibility and build system</p>
        <ul>
          <li>Lower GTK requirement to 4.12 for broader compatibility</li>
          <li>Requires libadwaita 1.5 (available in Ubuntu 24.04)</li>
          <li>Removed Snap packaging in favor of DEB packages</li>
          <li>Fixed GitHub Actions automated builds</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2025-11-30">
      <description>
        <p>First stable release</p>
        <ul>
          <li>View all autostart entries from user and system directories</li>
          <li>Edit autostart entry commands and parameters</li>
          <li>Delete or disable autostart entries</li>
          <li>Add new autostart entries from installed applications or custom commands</li>
          <li>Multi-language support (English and German)</li>
          <li>Modern GNOME interface with libadwaita</li>
        </ul>
      </description>
    </release>
  </releases>
